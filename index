    <script>
        // Utility function to strip leading repeated titles
        function stripLeadingRepeatedTitle(text, title) {
            const patterns = [
                new RegExp(`^\\s*\\*\\*_${title}_\\*\\*\\s*`, 'i'),
                new RegExp(`^\\s*\\*\\*${title}\\*\\*\\s*`, 'i'),
                new RegExp(`^\\s*__${title}__\\s*`, 'i'),
                new RegExp(`^\\s*_${title}_\\s*`, 'i')
            ];
            let out = text;
            for (const rx of patterns) out = out.replace(rx, '');
            return out.trim();
        }

        // Smooth scrolling for all internal links
        document.addEventListener('DOMContentLoaded', function() {
            // Check if user prefers reduced motion
            const prefersReducedMotion = window.matchMedia('(prefers-reduced-motion: reduce)').matches;
            
            if (!prefersReducedMotion) {
                // Add smooth scrolling behavior
                document.documentElement.style.scrollBehavior = 'smooth';
            }

            // Handle floating eye click for mobile
            const floatingEye = document.querySelector('.floating-eye');
            
            floatingEye.addEventListener('click', function(e) {
                // On mobile, show tooltip on tap
                if (window.innerWidth <= 768) {
                    const tooltip = this.querySelector('.tooltip');
                    tooltip.style.opacity = '1';
                    tooltip.style.visibility = 'visible';
                    
                    // Hide tooltip after 3 seconds
                    setTimeout(() => {
                        tooltip.style.opacity = '0';
                        tooltip.style.visibility = 'hidden';
                    }, 3000);
                }
            });

            // Handle touch events for mobile
            floatingEye.addEventListener('touchstart', function(e) {
                if (window.innerWidth <= 768) {
                    const tooltip = this.querySelector('.tooltip');
                    tooltip.style.opacity = '1';
                    tooltip.style.visibility = 'visible';
                }
            });

            floatingEye.addEventListener('touchend', function(e) {
                if (window.innerWidth <= 768) {
                    setTimeout(() => {
                        const tooltip = this.querySelector('.tooltip');
                        tooltip.style.opacity = '0';
                        tooltip.style.visibility = 'hidden';
                    }, 3000);
                }
            });
        });
    </script>
